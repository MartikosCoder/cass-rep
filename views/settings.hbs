<div class="row justify-content-md-center" style="margin-top: 100px">
    <div class="col-md-6">

        {{#if message}}
            <div class="alert {{messageClass}}" role="alert">
                {{message}}
            </div>
        {{/if}}

        <form method="POST" action="/settings">
            <h2>Настройки сервера IIKO</h2>
            <div class="form-group">
                <label for="server">Login</label>
                <input name="server" type="server" class="form-control" id="server" value={{data.server}}>
            </div>
            <div class="form-group">
                <label for="user">Login</label>
                <input name="user" type="user" class="form-control" id="user" value={{data.login}}>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input name="password" type="password" class="form-control" id="password" placeholder="password">
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
            <a class="btn btn-primary" href="/main">На главную</a>
        </form>

    </div>
</div>