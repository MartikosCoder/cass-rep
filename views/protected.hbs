                <th style = "border: 1px solid grey;text-align:center;">Ссылка на таблицу</th>
            </tr>
            {{#each data}}
                <tr>
                    <td rowspan="4" style = "border: 1px solid grey;text-align:center;">{{this.[0]}}</td>
                    <td style = "border: 1px solid grey;">
                        <select id="sel_{{this.[0]}}_1" value={{this.[2]}}>
                            {{#each data.cat}}
                                <option value={{this.[0]}}>{{this.[0]}}</option>
                            {{/each}}
                        </select>
                    </td>
                    <td style="border: 1px solid grey;">
                        <input id="surname_{{this.[0]}}_1" value={{this.[3]}}>
                    </td>
                    <td style="border: 1px solid grey;">
                        <input id="target1_{{this.[0]}}_1" value={{this.[4]}}>
                    </td>
                    <td style="border: 1px solid grey;">
                        <input id="target2_{{this.[0]}}_1" value={{this.[5]}}>
                    </td>
                    <td rowspan="4" style = "border: 1px solid grey;text-align:center;">{{this.[1]}}</td>
                </tr>
                <tr>
                    <td style = "border: 1px solid grey;">
                        <select id="sel_{{this.[0]}}_2" value={{this.[6]}}>
                            {{#each categories}}
                                <option value={{this.name}}>{{this.name}}</option>
                            {{/each}}
                        </select>
                    </td>
                    <td style="border: 1px solid grey;">
                        <input id="surname_{{this.[0]}}_2" value={{this.[7]}}>
                    </td>
                    <td style="border: 1px solid grey;">
                        <input id="target1_{{this.[0]}}_2" value={{this.[8]}}>
                    </td>
                    <td style="border: 1px solid grey;">
                        <input id="target2_{{this.[0]}}_2" value={{this.[9]}}>
                    </td>
                </tr>
                <tr>
                    <td style = "border: 1px solid grey;">
                        <select id="sel_{{this.[0]}}_3" value={{this.[10]}}>
                            {{#each categories}}
                                <option value={{this.name}}>{{this.name}}</option>
                            {{/each}}
                        </select>
                    </td>
                    <td style="border: 1px solid grey;">
                        <input id="surname_{{this.[0]}}_3" value={{this.[11]}}>
                    </td>
                    <td style="border: 1px solid grey;">
                        <input id="target1_{{this.[0]}}_3" value={{this.[12]}}>
                    </td>
                    <td style="border: 1px solid grey;">
                        <input id="target2_{{this.[0]}}_3" value={{this.[13]}}>
                    </td>
                </tr>
                <tr>
                    <td style = "border: 1px solid grey;">
                        <select id="sel_{{this.[0]}}_4" value={{this.[14]}}>
