<div>
    <h2>Установите цели для подразделений</h2>
    <form method="POST" action="/protected">
        <select id="sel_{{this.[0]}}_1" value={{this.[2]}}>
        {{#each categories}}
            <option value={{this}}>{{this}}</option>
        {{/each}}
        </select>
