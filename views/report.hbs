<link rel="stylesheet" href="../main.css">

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#">IIKO Reporter</a>
</nav>

{{#if message}}
    <div class="alert {{messageClass}}" role="alert">
        {{message}}
    </div>
{{/if}}

<div style="margin-top: 30px">
    <form method="POST" action="/report">
        <div class="form-group">
            <label for="inputStartDate">Выберите начало периода</label>
            <input name="startDate" type="date" class="form-control" id="inputStartDate">
        </div>
        <div class="form-group">
            <label for="inputEndDate">Выберите начало периода</label>
            <input name="endDate" type="date" class="form-control" id="inputEndDate">
        </div>
        <div class="form-group">
            <label for="department">Выберите подразделение</label>
            <select name="department" class="form-control" id="department">
                {{#each data}}
                    <option value='{{this}}'>{{this}}</option>
                {{/each}}
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Сформировать</button>
        <a class="btn btn-primary" href="/main">На главную</a>
    </form>
</div>